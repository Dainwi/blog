---
// component import
import MainHead from "./MainHead.astro";
import Footer from "../components/Footer.astro";
import Nav from "../components/Nav.astro";

// style import
import "../styles/global.css";

const {
  title = "Dainwi's Blog",
  description = "Welcome to Dainwi's blog - your hub for programming, tech news, and cybersecurity insights. Perfect for beginners to experts. Stay updated and informed!",
  image,
  frontmatter,
  robots,
} = Astro.props;
---

<html lang="en">
  <MainHead {title} {description} {image} {frontmatter} {robots} />
  <body>
    <Nav />
    <main>
      <slot> </slot>
    </main>
    <Footer />
  </body>
</html>
